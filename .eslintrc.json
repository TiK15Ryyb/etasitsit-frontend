{
    "env": {
        "browser": true,
        "es6": true,
        "node": false,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "indent": [
            2,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "no-console": 1,
        "no-trailing-spaces": 2,
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            {
                "arrays": "always-multiline",
                "objects": "always-multiline",
                "imports": "always-multiline",
                "exports": "always-multiline",
                "functions": "ignore"
            }
        ],
        "eol-last": "error",
        "prefer-const": "error",
        "no-param-reassign": [
            "error",
            {
                "props": true
            }
        ],
        "no-lonely-if": "error",
        "no-throw-literal": "error"
    },
    "globals": {
        "process": "readonly"
    }
}